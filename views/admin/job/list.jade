extends ../../../layout/admin
block admincontent
  main.main
    // Breadcrumb
    ol.breadcrumb
      li.breadcrumb-item Home
      li.breadcrumb-item.active Danh sách Tuyển dụng  
     
    .container-fluid
        form.form-horizontal(action='', method='get')
            .form-group.row
              .col-md-12
                .input-group
                  span.input-group-btn
                    button.btn.btn-primary(type='submit')
                      i.fa.fa-search
                      |  Tìm kiếm 
                  input#input1-group2.form-control(type='text', name='search', placeholder='Tên Tuyển dụng  ')
           
        .row
          .col-lg-12
            .card
              .card-header
                i.fa.fa-align-justify
                |  Danh sách Tuyển dụng  
              .card-block
                table.table.table-bordered.table-striped.table-condensed
                  thead
                    tr
                      th Tên Tuyển dụng  
                      th Hình ảnh 
                      th Mô tả công việc 
                      th Thời gian nộp  
                      th Liên hệ
                      th Trạng thái 
                      th Tuỳ chọn 
                  tbody
                    -if(list.docs)
                      each ln in list.docs
                        tr
                          td #{ln.name}
                          td
                            img(src="/public/upload/job/small/#{ln.picture}" style='width:100px')
                          td #{ln.contents} 
                          td #{ln.timed}
                          td #{ln.contact}
                          td
                            span.label.label-success #{ln.status ? 'Hiện thị ' :'Ẩn ' }
                          td 
                            a.btn.btn-success(href="/admin/job/edit/#{ln._id}")
                              | Thay đổi 
                            a.my_click_remove.btn.btn-danger(href="/admin/job/remove/#{ln._id}")
                              | Xoá 
                include ../paginate
