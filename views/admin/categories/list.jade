extends ../../../layout/admin
block admincontent
  main.main
    // Breadcrumb
    ol.breadcrumb
      li.breadcrumb-item Home
      li.breadcrumb-item.active Danh mục 
     
    .container-fluid
        form.form-horizontal(action='', method='get')
            .form-group.row
              .col-md-12
                .input-group
                  span.input-group-btn
                    button.btn.btn-primary(type='submit')
                      i.fa.fa-search
                      |  Tìm kiếm 
                  input#input1-group2.form-control(type='text', name='search', placeholder='Tên danh mục  ')
        .row
          .col-lg-12
            .card
              .card-header
                i.fa.fa-align-justify
                |  Danh sách danh mục 
              .card-block
                table.table.table-bordered.table-striped.table-condensed
                  thead
                    tr
                      th Vị trí 
                      th Tên danh mục 
                      th Hình ảnh 
                      th Trạng thái 
                      th Tuỳ chọn 
                  tbody
                    -if(list.docs)
                      each ln in list.docs
                        tr
                          td #{ln.position}
                          td #{ln.name}
                          th 
                            img(src="/public/upload/cate/small/#{ln.picture}")
                          td 
                            span.label.label-success #{ln.status ? 'Hiện thị ' :'Ẩn ' }
                          td 
                            a.btn.btn-success(href="/admin/categories/edit/#{ln._id}")
                              | Thay đổi 
                            a.my_click_remove.btn.btn-danger(href="/admin/categories/remove/#{ln._id}")
                              | Xoá 
                include ../paginate
