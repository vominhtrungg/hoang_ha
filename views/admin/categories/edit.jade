extends ../../../layout/admin
block admincontent
  main.main
    // Breadcrumb
    ol.breadcrumb
      li.breadcrumb-item 
        a(href="/" target="_black")
          | Home
      li.breadcrumb-item.active Danh mục : #{data.name} 
    .container-fluid
      form.animated.fadeIn(method='post' enctype="multipart/form-data")
        -if(success)
          .card.card-inverse.card-primary.text-xs-center
            .card-block.card-primary
              blockquote.card-blockquote
                p
                  | #{success}
        .row
          .col-md-12
            .card
              .card-header
                i.fa.fa-edit
                | Thêm mới danh mục 
                a(href="/admin/categories/list") Danh sách danh mục 
              .card-body
                div.form-horizontal(method='post' )
                  .form-group.row
                    label.form-control-label.col-md-3(for='') Tên danh mục 
                    .controls.col-md-9
                      .input-group
                        input.form-control( type='text' name="name" value='#{data && data.name? data.name : ""}' )
                      -if(error.name)
                          div.invalid-feedback(style='display:block')
                              | #{error.name}
                  .form-group.row
                    label.form-control-label.col-md-3(for='') Hình ảnh 
                    .controls.col-md-9
                      .input-group
                        input.form-control( type='file' name="picture" id="picture" accept="image/*")
                      #list
                        img(src="/public/upload/cate/#{data.picture}")
                  .form-group.row
                    label.form-control-label.col-md-3(for='') Vị trí 
                    .controls.col-md-9
                      .input-group
                        input.form-control( type='number' name="position" value='#{data && data.position? data.position : "1"}' )
                    
                  .form-group.row
                    label.form-control-label.col-md-3(for='') Trạng thái  
                    .controls.col-md-9
                      -if(!data.status)
                        .radio
                          label
                            input( type='radio' name="status" value='false' checked) 
                            |    Ẩn 
                        .radio
                          label
                            input( type='radio' name="status" value="true" ) 
                            |  Hiện 
                      -else
                        .radio
                          label
                            input( type='radio' name="status" value='false' ) 
                            |  Ẩn
                        .radio
                          label
                            input( type='radio' name="status" value="true" checked) 
                            |  Hiện
                  .form-actions
                    button.btn.btn-primary(type='submit') Save changes
                    button.btn.btn-secondary(type='reset') Cancel
          script.
            function handleFileSelect(evt) {
            var files = evt.target.files; // FileList object
            
            for (var i = 0, f; f = files[i]; i++) {
            
            if (!f.type.match('image.*')) {
            continue;
            }
            var reader = new FileReader();
           
            reader.onload = (function(theFile) {
            return function(e) {
            // Render thumbnail.
            var span = document.createElement('span');
            span.innerHTML = ['<img class="thumb" src="', e.target.result,
            '" title="', escape(theFile.name), '"/>'].join('');
            
            document.getElementById('list').innerHTML="";
            document.getElementById('list').insertBefore(span, null);
            };
            })(f);
            
            reader.readAsDataURL(f);
            }
            }
            document.getElementById('picture').addEventListener('change', handleFileSelect, false);
