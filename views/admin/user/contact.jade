extends ../../../layout/admin
block admincontent
  main.main
    // Breadcrumb
    ol.breadcrumb
      li.breadcrumb-item Home
      li.breadcrumb-item.active Danh sách Liên hệ 
     
    .container-fluid
        form.form-horizontal(action='', method='get')
            .form-group.row
              .col-md-12
                .input-group
                  span.input-group-btn
                    button.btn.btn-primary(type='submit')
                      i.fa.fa-search
                      |  Tìm kiếm 
                  input#input1-group2.form-control(type='text', name='search', placeholder='Tên Liên hệ ')
           
        .row
          .col-lg-12
            .card
              .card-header
                i.fa.fa-align-justify
                |  Danh sách Liên hệ 
              .card-block
                table.table.table-bordered.table-striped.table-condensed
                  thead
                    tr
                      th Tên 
                      th Email hoặc số điện thoại
                      th Mô tả 
                      th Ngày liên hệ 
                      th Tuỳ chọn 
                  tbody
                    -if(list.docs)
                      each ln in list.docs
                        tr
                          td #{ln.name}
                          td #{ln.email}
                          td #{(ln.productName) ? 'Sản phẩm:  ' + ln.productName : ''} <br/>  #{(ln.quantity) ? 'Số lượng: ' + ln.quantity : ''} <br/> #{ln.description}
                          td #{ln.created_at}
                           
                        
                          
                          td 
                           
                            a.my_click_remove.btn.btn-danger(href="/admin/user/removecontact/#{ln._id}")
                              | Xoá 
                include ../paginate
