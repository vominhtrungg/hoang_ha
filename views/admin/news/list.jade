extends ../../../layout/admin
block admincontent
  main.main
    // Breadcrumb
    ol.breadcrumb
      li.breadcrumb-item Home
      li.breadcrumb-item.active Danh sách tin tức
     
    .container-fluid
        form.form-horizontal(action='', method='get')
            .form-group.row
              .col-md-12
                .input-group
                  span.input-group-btn
                    button.btn.btn-primary(type='submit')
                      i.fa.fa-search
                      |  Tìm kiếm 
                  input#input1-group2.form-control(type='text', name='search', placeholder='Tên tin tức')
           
        .row
          .col-lg-12
            .card
              .card-header
                i.fa.fa-align-justify
                |  Danh sách tin tức
              .card-block
                table.table.table-bordered.table-striped.table-condensed
                  thead
                    tr
                      th Tên tin tức
                      th Hình ảnh 
                      th Danh mục 
                      th Trạng thái 
                      th Tuỳ chọn 
                  tbody
                    -if(list.docs)
                      each ln in list.docs
                        tr
                          td #{ln.name}
                          td
                            img(src="/public/upload/news/#{ln.picture}" style='width:100px')
                            br
                            -if(ln.multipicture)
                              ul.list-inline
                                each p in ln.multipicture
                                  li.list-inline-item
                                    img(src="/public/upload/product/small/#{p}" style='width:100px')
                          
                          td
                            -if(ln.cid_cate=='1')
                              span.label.label-success 
                              | Khuyến mãi 
                            -if(ln.cid_cate=='2')
                              span.label.label-success
                              | Thủ thuật 
                            -else
                              span.label.label-success 
                              | TIn tức
                            
                          td
                            p.badge.badge-success #{ln.status ? 'Hiện thị ' :'Ẩn ' }
                            p.badge.badge-info #{ln.is_home ? 'Hiện thị ở Header' :'' }
                          td 
                            a.btn.btn-success(href="/admin/news/edit/#{ln._id}")
                              | Thay đổi 
                            a.my_click_remove.btn.btn-danger(href="/admin/news/remove/#{ln._id}")
                              | Xoá 
                include ../paginate
