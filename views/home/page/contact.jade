block mycss
  -if(stylepage)
    link(rel='stylesheet', type='text/css', href='/public/hoangha/#{stylepage}/css/index.css')
block myjs
  -if(stylepage)
    script(type='text/javascript', src='/public/hoangha/#{stylepage}/js/index.js')
extends ../../../layout/default
block contents
  section.content
    .contact
      .form
        -if(success)
          h1(style='color:red') #{success}
        form(action='' method='post')
          ul
            li
              | Họ và tên(*)
              br
              input(type='text', name='name' size='30', required='')
              -if(error && error.name)
                p #{error.name}
            li
              | Email(*)
              br
              input(type='email', name='email' size='30', required='')
              -if(error && error.email)
                p #{error.email}
            li
              | Nội dung(*)
              br
              textarea(name='content' rows='11', cols='30', required='')
              -if(error && error.content)
                p #{error.content}
          p.text_center
            input(type='submit', value='Send')
      .map
        #map(style='width: 100%; height: 400px; border-radius: 8px; border:1px solid #ddd;')
          iframe(src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.2533429119408!2d106.63054261411651!3d10.791898361860524!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752eab24bda81f%3A0x68437a0ff7635980!2zMzIgRMOibiBDaOG7pywgVMOibiBUaOG6oW5oLCBUw6JuIFBow7osIEjhu5MgQ2jDrSBNaW5oLCBWaeG7h3QgTmFt!5e0!3m2!1svi!2s!4v1586750178722!5m2!1svi!2s' width='100%' height='400' frameborder='0' style='border:0' allowfullscreen='')
        h1 CÔNG TY TNHH QUẢNG CÁO HOÀNG HÀ
        p
          b Xưởng In
          | : 84/81 Tân Sơn Nhì, P. Tân Sơn Nhì, Q. Tân Phú,TP.HCM
          br
